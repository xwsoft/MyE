<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_switch_t"
    android:layout_width="310dp"
    android:layout_height="145dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/dialog"
    android:orientation="vertical"
    android:visibility="visible" >
    <RelativeLayout
        android:id="@+id/l_switch_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Select the thermostat to view and control"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_switch_item"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ListView
            android:id="@+id/list_switch_thermostat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/l_title"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
        </ListView>
    </RelativeLayout>

</LinearLayout>